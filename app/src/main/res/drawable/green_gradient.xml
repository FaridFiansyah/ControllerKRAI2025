<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="32dp" />
            <gradient
                android:angle="135"
                android:endColor="#55FF2B"
                android:startColor="#06FFB0"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient
                android:angle="135"
                android:startColor="#55FF2B"
                android:endColor="#06FFB0"
                android:type="linear" />
        </shape>
    </item>
</selector>