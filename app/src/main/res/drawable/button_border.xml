<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Gradient border layer -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="35dp" />
                    <gradient
                        android:angle="180"
                        android:startColor="#0f2d25"
                        android:endColor="#238a6a"
                        android:type="radial"
                        android:centerY="170%"
                        android:centerX="90%"
                        android:gradientRadius="300dp"/>
                </shape>
            </item>
            <!-- Solid black inner layer with padding that creates the border effect -->
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="33dp" />
                    <solid android:color="#002319"></solid>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>