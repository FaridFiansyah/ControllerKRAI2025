<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_rounded_background">

    <!-- Area konten dengan background hijau -->
    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_blur"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/quicksand_bold"
            android:hint="Preset Name"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#CCFFFFFF"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/ipInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/quicksand_bold"
            android:hint="IP Address"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#CCFFFFFF"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/portInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/quicksand_bold"
            android:hint="PUSH,PULL"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#CCFFFFFF"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/macInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/quicksand_bold"
            android:hint="MAC Address"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#CCFFFFFF"
            android:textCursorDrawable="@null" />
    </LinearLayout>

    <!-- Container abu-abu yang menutupi seluruh bagian bawah -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentArea"
        android:layout_marginTop="-10dp"
        android:background="@drawable/button_underline"
        android:orientation="horizontal"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/kanit"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="#33FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/kanit"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="#33FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/kanit"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="#33FFFFFF" />
    </LinearLayout>
</RelativeLayout>